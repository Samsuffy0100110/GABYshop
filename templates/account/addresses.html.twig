{% extends 'base.html.twig' %}

{% block title %}
	Mes adresses
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<i>
					<small>
						<a href="{{ path('home')}}">Home</a>
						/
						<a href="{{ path('account_dashboard')}}">Dashboard</a>
						/Mes adresses
					</small>
				</i>
			</div>
		</div>
		<div class="row mt-5 mb-5">
			<div class="col-lg-3">
				{{ include('account/_dashboardLinks.html.twig') }}
			</div>
			<div class="col-lg-9 border rounded p-5">
				<h1>Mes adresses</h1>
				<p class="dark">Modifier vos adresses</p>
				<hr>
				{{ form_start(form) }}
				<div class="row">
					<div class="col-lg-12">
						{{ form_row(form.adress) }}
					</div>
				</div>
				<div class="row">
					<div class="col-lg-6">
						{{ form_row(form.city) }}
					</div>
					<div class="col-lg-6">
						{{ form_row(form.zipcode) }}
					</div>
				</div>
				<div class="row">
					<div class="col-lg-6">
						{{ form_row(form.country) }}
					</div>
					<div class="col-lg-6">
						{{ form_row(form.phone) }}
					</div>
				</div>
				<div class="row">
					<div class="col-lg-12 d-flex justify-content-end mt-3">
						{{ form_row(form.submit) }}
					</div>
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	{% endblock %}
