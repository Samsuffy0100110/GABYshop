{% extends "base.html.twig" %}

{% block title %}
    Créer un mot de passe
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
            {% for shop in shops %}
        <h1 class="text-center mt-3 mb-3">Bienvenue {{ app.user.firstname }} sur {{ shop.name }}</h1>
            {% endfor %}
                <div class="card mb-5">
                    <div class="card-header">
                        <h3 class="card-title text-center">Créer ton mot de passe</h3>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-success">Créer</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}