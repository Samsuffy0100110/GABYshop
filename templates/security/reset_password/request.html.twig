{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe |
	{{ parent() }}
{% endblock %}

{% block body %}
	<div class="container">
		<div class="card bg-light">
		<div class="card-body">
			{% for flash_error in app.flashes('reset_password_error') %}
				<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
			{% endfor %}
			<h2 class="text-center">Nouveau mot de passe</h2>
			
				{{ form_start(requestForm) }}
				{{ form_row(requestForm.email) }}

				<small>
					Entrer votre email pour recevoirun lien pour réinitialiser votre mot de passe.
				</small>

				<div class="d-flex justify-content-end">
					<button class="btn btn-success mt-5 mb-5">Envoyer</button>
				</div>
				{{ form_end(requestForm) }}
			</div>
		</div>
	</div>
{% endblock %}
