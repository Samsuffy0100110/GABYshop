<div class="container">
	<div class="align-content-center bg-light border rounded my-5 p-5">
		<div class="row">
			<div class="col-lg-6">
				<h2>Newsletter</h2>
				<p>
					Inscrivez-vous à notre newsletter pour recevoir nos dernières actualités et nos offres spéciales.
				</p>
			</div>
			<div class="col-lg-6 mx-auto">
				{{ form_start(form) }}
				<div class="row mt-4">
					<div class="col-lg-8">
						{{ form_widget(form.email) }}
					</div>
					<div class="col-lg-4 mt-2">
						{{ form_row(form.submit) }}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
