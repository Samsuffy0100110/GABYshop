<div class="container">
	<div class="row mt-2">
		<div class="col">
			{% if logo %}
				<a href="{{ path('home') }}"><img class="logo" src="{{ '/images/logos/' ~ logo.image }}" alt="{{ logo.name }}"></a>
			{% else %}
				{% for shop in shops %}
					<a class="text-decoration-none" href="{{ path('home') }}">
						<p class="text-dark m-2 fw-bold">{{ shop.name }}</p>
					</a>
				{% endfor %}
			{% endif %}
		</div>
		<div class="col">
			{% for shop in shops %}
				<div class="fs-1 text-center mx-auto">{{ shop.name }}</div>
			{% endfor %}
		</div>
		<div class="col">
			{% if app.session.get('cart') %}
				{% for element in app.session.get('cart') %}
				<a class="text-decoration-none" href="{{ path('cart_index') }}">
					<div class="text-center">
						<i class="fas fa-shopping-cart fa-3x position-relative">
						<span class="badge text-white position-absolute top-0 start-100 translate-middle rounded-pill bg-danger">{{ element }}</span>
						</i>
					</div>
				</a>
			{% endfor %}
			{% else %}
			<a class="text-decoration-none" href="{{ path('cart_index') }}">
				<div class="text-center">
						<i class="fas fa-shopping-cart fa-3x position-relative">
						<span class="badge text-white position-absolute top-0 start-100 translate-middle rounded-pill bg-danger">0</span>
						</i>
					</div>
				</a>
			{% endif %}
	</div>
</div></div>
