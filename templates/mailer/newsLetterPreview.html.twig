{% extends 'base.html.twig' %}

{% block title %}{{ newsletter.name }} |
	{{ parent() }}
{% endblock %}

{% block body %}
<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h1>Prévisualisation</h1>
					<h2>Titre</h2>
					<p>{{ newsletter.title }}</p>
					<p class="created-at" >Créer le : {{ newsletter.createdAt|date('d/m/Y') }}</p>
					<h2>Contenu</h2>
					<p>{{ newsletter.description|raw }}</p>
					<h2>Image</h2>
					<img src="{{ ('/images/newsletter/' ~ newsletter.image) }}" alt="{{ newsletter.title }}">
			<a class="btn btn-info" href="{{ path('newsletter_send', { 'id': newsletter.id }) }}">Envoyer la newsletter</a>
		</div>
	</div>
</div>
{% endblock %}